    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/toastr.min.js"></script>
</head>

<body>
    <div class="navbar-wrapper">
        <div class="container">
            <div class="navbar navbar-inverse navbar-static-top">
                <div class="navbar-header">
                    <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                </div>
                <div class="navbar-collapse collapse" style="padding-right: 10px; font-size: 14px;">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Vacantes", "Index", "Ofertas")</li>
                        <li>@Html.ActionLink("Nosotros", "About", "Home")</li>
                        <li>@Html.ActionLink("Contactos", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/img/fondoA.jpg" style="width:100%" class="img-responsive" />
                <div class="container">
                    <div class="carousel-caption bar-transparent">
                        <h1>¿Buscas una oportunidad laboral?</h1>
                        <p>@Html.ActionLink("¡Multiples empleadores interesados en colaboradores como tú!", "Index", "Ofertas")</p>
                        <p>&nbsp;</p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="~/img/fondoB.jpg" style="width:100%" class="img-responsive" />
                <div class="container">
                    <div class="carousel-caption bar-transparent">
                        <h1>¿Cómo aplicar a una vacante?</h1>
                        <p>@Html.ActionLink("¡Aprende en simples pasos como aplicar para una de nuestras vacantes!", "Index", "Ofertas")</p>
                        <p>&nbsp;</p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="~/img/fondoC.jpg" style="width:100%" class="img-responsive" />
                <div class="container">
                    <div class="carousel-caption bar-transparent">
                        <h1>¿Buscas colaboradores?</h1>
                        <p>@Html.ActionLink("¡Postea tus vacantes en 2 sencillos pasos!", "Index", "Ofertas")</p>
                        <p>&nbsp;</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </div>

